@page "/"



<div class="hero-section">
    <img src="/images/hotel-hero.jpg" class="w-100" style="max-height: 500px; object-fit: cover;" alt="Hotel View">
    <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
        <h1 class="display-4 fw-bold">Lüks ve Konforun Adresi</h1>
        <p class="lead">Unutulmaz bir konaklama deneyimi için sizleri bekliyoruz</p>
    </div>
</div>

<div class="container my-5">
    <!-- Hızlı Rezervasyon Formu -->
    <div class="card shadow-lg">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Hızlı Rezervasyon</h3>
            <div class="row">
                <div class="col-md-3 mb-3">
                    <label>Giriş Tarihi</label>
                    <input type="date" class="form-control" />
                </div>
                <div class="col-md-3 mb-3">
                    <label>Çıkış Tarihi</label>
                    <input type="date" class="form-control" />
                </div>
                <div class="col-md-3 mb-3">
                    <label>Kişi Sayısı</label>
                    <select class="form-control">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                    </select>
                </div>
                <div class="col-md-3 mb-3">
                    <label>&nbsp;</label>
                    <button class="btn btn-primary w-100">Rezervasyon Yap</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Öne Çıkan Odalar -->
    <h2 class="text-center my-5">Öne Çıkan Odalarımız</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="/images/room1.jpg" class="card-img-top" alt="Standart Oda">
                <div class="card-body">
                    <h5 class="card-title">Standart Oda</h5>
                    <p class="card-text">Konforlu ve şık tasarımlı odalarımız.</p>
                    <a href="#" class="btn btn-outline-primary">Detaylar</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="/images/room2.jpg" class="card-img-top" alt="Deluxe Oda">
                <div class="card-body">
                    <h5 class="card-title">Deluxe Oda</h5>
                    <p class="card-text">Lüks ve geniş yaşam alanı.</p>
                    <a href="#" class="btn btn-outline-primary">Detaylar</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="/images/room3.jpg" class="card-img-top" alt="Suit Oda">
                <div class="card-body">
                    <h5 class="card-title">Suit Oda</h5>
                    <p class="card-text">En üst düzey konfor ve lüks.</p>
                    <a href="#" class="btn btn-outline-primary">Detaylar</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Otel Hakkında -->
    <div class="row my-5 align-items-center">
        <div class="col-md-6">
            <h2>Hakkımızda</h2>
            <p class="lead">20 yıllık tecrübemizle size en iyi hizmeti sunuyoruz.</p>
            <p>Modern tasarım, konforlu odalar ve profesyonel hizmet anlayışıyla misafirlerimize unutulmaz bir konaklama deneyimi yaşatıyoruz.</p>
        </div>
        <div class="col-md-6">
            <img src="/images/about.jpg" class="img-fluid rounded" alt="Hotel">
        </div>
    </div>

    <!-- İletişim Bilgileri -->
    <div class="bg-light p-5 rounded">
        <div class="row">
            <div class="col-md-4 text-center">
                <i class="bi bi-geo-alt fs-1"></i>
                <h4 class="mt-3">Adres</h4>
                <p>İstanbul, Türkiye</p>
            </div>
            <div class="col-md-4 text-center">
                <i class="bi bi-telephone fs-1"></i>
                <h4 class="mt-3">Telefon</h4>
                <p>+90 (212) 555 0000</p>
            </div>
            <div class="col-md-4 text-center">
                <i class="bi bi-envelope fs-1"></i>
                <h4 class="mt-3">E-posta</h4>
                <p>info@hotelvr.com</p>
            </div>
        </div>
    </div>
</div>